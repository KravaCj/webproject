<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.mysite.servlet.RegistrationServlet</servlet-class>
        <init-param>
            <param-name>company</param-name>
            <param-value>bellinfo inc</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.mysite.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>resultWeekend</servlet-name>
        <servlet-class>com.mysite.servlet.WeekendResultServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>resultWeekend</servlet-name>
        <url-pattern>/resultWeekend.do</url-pattern>
    </servlet-mapping>
</web-app>